<!-- Website search on www.fieldtriptoolbox.org -->
<div id="searchwebsite"></div>

<script>
if (readCookie('allow-external-cookies')=='true') {
  document.getElementById("searchwebsite").innerHTML = '<form method="get" action="http://www.google.com/search"><input type="hidden" name="q" value="site:www.fieldtriptoolbox.org"><input type="text" name="q" placeholder="Search using Google"/><input type="submit" value="🔍" /></form>'
}
else {
  document.getElementById("searchwebsite").innerHTML = '<form method="get" id="search" action="http://duckduckgo.com/"><input type="hidden" name="sites" value="www.fieldtriptoolbox.org"/><input type="text" name="q" maxlength="255" placeholder="Search using DuckDuckGo"/><input type="submit" value="🔍" /></form>'
}
</script>
